<template name="Grid">
  <view class="grid">
    <block a:for="{{list}}">
      <view style="width:{{100/(columnNum||6)}}%;padding-top:13%;" class="grid-item" onTap="handleItemTap" 
        data-index={{index}}>
        <view class="grid-item-wrapper">
          <image mode="aspectFit" src="{{item.icon}}" class="grid-icon" />
          <text class="grid-text">{{item.text}}</text>
        </view>
      </view>
    </block>
  </view>
</template>