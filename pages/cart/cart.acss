.cart-confirm>button{
  margin-right: 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  width: 150rpx;
  text-align: center;
  vertical-align: middle;
  border-radius: 10rpx;
}
.cart-header button{
  margin-left: 5px;
   font-size: 10px;
   padding: 0;
   border-radius: 10rpx;
}